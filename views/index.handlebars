<html lang="en">
  <head>
    <!-- Defines the document's character encoding as UTF-8 which includes most characters from all known languages -->
    <meta charset="UTF-8" />
    <!-- Sets the viewport to control how the webpage is displayed on mobile devices -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- The title of the page which dynamically changes based on the 'name' variable -->
    <title>{{name}} Page</title>
  </head>
  <body>
      <!-- Inserts a header partial that includes navigation and branding -->
      {{> header}}
    <!-- Subheading for the Clubs section, styled with a specific text color -->
    <h2 class="text-[#dbebc0]">Clubs</h2>
    <!-- Unordered list without default list styling to display club entries -->
    <ul class="list-none">
      <!-- Loop through each club in the 'clubs' array provided to the template -->
      {{#each clubs as |club| }}
      <!-- List item for each club using a 'club' partial that formats the club data -->
      <li>
        {{> club }}
      </li>
      {{/each}}
    </ul>


  </body>
</html>