<div class="row">
  <div class="col-md-6">
    <h2>Login</h2>

    <form class="form login-form">
      <div class="form-group">
        <label for="email-login" class="text-black font-bold">E-mail:</label>
        <input class="block mb-2 text-sm font-medium text-gray-900 dark:text-black form-input" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login" class="text-black font-bold">Password:</label>
        <input class="block mb-2 text-sm font-medium text-gray-900 dark:text-black form-input" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="justify-start shadow-md bg-green-500 animate-bounce px-16 rounded full btn btn-primary" type="submit">Login&#128273</button>
      </div>
    </form>
  </div>
  <div class="col-md-6">
    <h2 class="bg-[#c3b299] shadow-xl">Sign-up<span class="text-sm italic">and get to reading!</span></h2>

    <form class="form signup-form">
      <div class="form-group">
        <label for="name-signup" class="text-black font-bold" >Name:</label>
        <input class="form-input" type="text" id="name-signup" />
      </div>
      <div class="form-group">
        <label for="email-signup" class="text-black font-bold">E-mail:</label>
        <input class="form-input" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup" class="text-black font-bold">Password:</label>
        <input class="form-input" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button class="bg-green-500 animate-bounce px-16 rounded fullbtn btn-primary" type="submit">Sign-up&#128221</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>